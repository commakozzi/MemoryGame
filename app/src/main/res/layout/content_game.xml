<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bluewolftek.www.memorygame.GameActivity"
    tools:showIn="@layout/activity_game"
    android:background="#aed1e8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: 999"
        android:id="@+id/txtScore"
        android:layout_marginTop="33dp"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Difficulty: 4"
        android:id="@+id/txtDifficulty"
        android:layout_below="@+id/txtScore"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Watch/Go"
        android:id="@+id/txtWatchGo"
        android:layout_below="@+id/txtDifficulty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/btnButton1"
        android:layout_below="@+id/txtWatchGo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="2"
        android:id="@+id/btnButton2"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btnButton1"
        android:layout_alignLeft="@+id/btnButton1"
        android:layout_alignStart="@+id/btnButton1" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/btnButton3"
        android:layout_below="@+id/btnButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/btnButton4"
        android:layout_below="@+id/btnButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replay"
        android:id="@+id/btnReplay"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnButton4"
        android:layout_toEndOf="@+id/btnButton4" />
</RelativeLayout>
